{
  "manifest_version": 2,
  "name": "Jukely Checker",
  "description": "This extension allows you to repeatedly check for interested events and book them when they're available.",
  "version": "2.1",
  "browser_action": {
    "default_popup": "app.html"
  },
  "icons": { 
    "16": "img/J_16_x_16.png",
    "48": "img/J_48_x_48.png",
    "128": "img/J_128_x_128.png" 
  },
  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },
  "permissions": ["tabs", "<all_urls>"]
}